

    <div class="card mb-4">
        <h6 class="card-header bg-white">{{ __("Closed to Arrival & Departure services") }}</h6>
        <div class="card-body">
            <div class="repeater-default">
                <div>
                    <div class="row mb-2">
                        <div class="col-4 small">
                            {{ __("Name") }}
                        </div>
                        <div class="col-3 small">
                            {{ __("Date") }}
                        </div>
                    </div>
                </div>


                <div data-repeater-list="additional">
                    {% if listing.additional_options | length == 0 %}
                        <div data-repeater-item>
                            <div class="row mb-2">
                                <div class="col-4">
                                    <input type="text" name="close_name" placeholder="{{ __("e.g.  Holiday, Nyepi") }}" class="form-control  form-control-sm"/>
                                </div>
                                <div class="col-3">
                                    <input type="date" name="close_date" placeholder="{{ __("Close Date") }}" class="form-control  form-control-sm"/>
                                </div>
                                <div class="col-3">
                                <span data-repeater-delete class="btn btn-danger btn-sm">
                                    <span class="glyphicon glyphicon-remove"></span> {{ __("Delete") }}
                                </span>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        {% for additional_option in listing.additional_options %}

                            <div data-repeater-item>
                                <div class="row mb-2">
                                    <div class="col-4">
                                        <input type="text" name="name" value="{{additional_option.name }}" class="form-control form-control-sm"/>
                                    </div>
                                    <div class="col-3">
                                        <input type="text" name="price" value="{{additional_option.price }}" class="form-control form-control-sm"/>
                                    </div>                                    
									<div class="col-2">
                                        <input type="text" name="max_quantity" value="{{additional_option.max_quantity }}" class="form-control form-control-sm"/>
                                    </div>
                                    <div class="col-3">
                                        <span data-repeater-delete class="btn btn-danger btn-sm">
                                            <span class="glyphicon glyphicon-remove"></span> {{ __("Delete") }}
                                        </span>
                                    </div>
                                </div>
                            </div>

                        {% endfor %}
                    {% endif %}

                </div>


                <div class="form-group">
                    <div class="">
                          <span data-repeater-create class="btn btn-info btn-sm">
                            <span class="mdi mdi-plus"></span> {{ __("Add") }}
                          </span>
                    </div>
                </div>

            </div>
        </div>
    </div>


