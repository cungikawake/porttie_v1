<div class="row  mb-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="owl-carousel ">
                    {% for item in items.discounts %} 
                            <div class="card">
                                {% if item.discount > 0 %}
                                    <div class="ribbon"><span>off {{item.discount}}% </span></div>
                                {% endif %}
                                <div style="position: relative">

                                    <a href="{{item.url}}" class="roundeds  border-top image-wrappers  text-center">
                                        <img class="img-grid-loaders roundeds img-grid" src="{{ item.thumbnail }}?w=300&h=255" alt="{{item.title}}" alt="{{item.title}}">
                                    </a>
                                </div>


                                <div class="card-body pt-3 pb-4 p-2">
                                    <a href="{{item.url}}" style="display: block;     font-style: normal;" class="truncate h6 card-subtitle mb-2 text-dark" >{{ item.title }}</a>
                                    <p class="card-text row mt-0">
                                        <span class="col-sm-12 text-default mb-1" style="text-decoration: line-through; color:#8b8f8b;">
                                            <small>
                                                {{format_money(item.price, item.currency)}} 
                                                {{__('per')}} 
                                                {{ (item.price_per_unit_display !='')? item.price_per_unit_display : item.pricing_model.duration_name}}
                                            </small>
                                        </span>
                                        <span class="col-sm-12 text-danger truncate mb-1">
                                            {% set price_sale = item.price - (item.price * (item.discount /100 )) %}
                                            {{format_money(price_sale, item.currency)}} <small>{{__('per')}} 
                                            {{ (item.price_per_unit_display !='')? item.price_per_unit_display : item.pricing_model.duration_name}}</small>
                                        </span>
                                        <small class="col-sm-12 text-muted truncate">{{item.short_address }}</small> 
                                    </p>
                                </div>

                            </div> 
                    {% endfor %}
                </div>
            <div>
        </div>
    </div>
</div>
 
