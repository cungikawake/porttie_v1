<!DOCTYPE html>
<html lang="{{ current_locale() }}">
<head><meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    
    <title>{{ MetaTag.get('title') }} | porttie.com</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSRF Token -->
    <meta name="csrf-token" content="{{ csrf_token() }}">
    <meta name="generator" content="Porttie 1.0.0" /> <!-- leave this for versioning -->

    <meta name="copyright"content="porttie.com">
    <meta name="language" content="en">
    <meta name="robots" content="index,follow" /> 

    {{  MetaTag.tag('title') | raw }}
    {{  MetaTag.tag('description') | raw }} 
    {{  MetaTag.tag('image') | raw }} 

    <!-- Schema.org for Google -->
    <meta itemprop="name" content="{{ MetaTag.get('title') }} | Porttie.com">
    <meta itemprop="description" content="{{ MetaTag.get('description') }}"> 

    <!-- Open Graph general (Facebook, Pinterest & Google+) -->
    <meta name="og:title" content="{{ MetaTag.get('title') }} | Porttie.com">
    <meta name="og:description" content="{{ MetaTag.get('description') }}">
    <meta name="og:type" content="article"> 

    <meta property="og:title" content="{{ MetaTag.get('title') }} | Porttie.com" />
    <meta property="og:url" content="https://porttie.com"/>
    <meta property="og:image" content="{{ MetaTag.get('image') }}">
    <meta property="og:type" content="article" />

    <!-- Scripts -->
    {% if setting('googlmapper.key') %}
        <script type="text/javascript" src="//maps.googleapis.com/maps/api/js?v=3.31&region=GB&language=en-gb&key=AIzaSyCJTIHh1GRN37zuOlt-4XWrsm-XY2LwzNc&libraries=places"  data-turbolinks-eval="false"></script>
    {% else %}
        <script type="text/javascript" src='https://maps.google.com/maps/api/js?sensor=false&libraries=places'></script>
    {% endif %}

	{% if setting('favicon_url') %}
		<link rel="shortcut icon" type="image/png" href="{{ asset('images/icons/icon-128x128.png') }}"/>
    {% endif %}

    {% set scripts = jsdeliver_combine("default", "js")|split(',') %}
    {% for script in scripts %}
        <script src="https://cdn.jsdelivr.net/{{script}}" type="text/javascript"  ></script>
    {% endfor %}

    {% if current_locale() != 'en' %}
        <script src="https://npmcdn.com/flatpickr/dist/l10n/{{ current_locale() }}.js" type='text/javascript'></script>
    {% endif %}

    <!-- Styles -->
	{% set styles = jsdeliver_combine("default", "css")|split(',') %}
    {% for style_href in styles %}
        <link href="https://cdn.jsdelivr.net/{{style_href}}" rel="stylesheet" type='text/css' media='all'/>
    {% endfor %}

    <!-- App Scripts & Styles -->
    <script src="{{ asset('themes/' ~ current_theme() ~ '/js/app.js') }}"></script>
    {% if setting('theme_css') %}
        <link href="{{ setting('theme_css') }}" rel="stylesheet" type='text/css' media='all'>
    {% else %}
        <link href="{{ asset('themes/' ~  current_theme()  ~ '/css/app.css') }}" rel="stylesheet" type='text/css' media='all'>
    {% endif %}

    <!--<link href="https://rawcdn.githack.com/jeremykenedy/laravel-auth/96c90ecbc0e50dc130e0e7248fee4eab28c68939/public/css/app.css" rel="stylesheet">
    <link href="https://preview.tabler.io/assets/css/dashboard.css" rel="stylesheet">-->

    {% if setting('stripe_publishable_key') %}
    <!-- Stripe -->
    <script src="https://js.stripe.com/v3/" type='text/javascript'></script>
    <script src="https://checkout.stripe.com/checkout.js" type='text/javascript'></script>
    <script>
        var stripe = Stripe('{{ setting('stripe_publishable_key') }}');
    </script>
    {% endif %}

    <!-- Scripts -->
    <link href="https://rawgit.com/sdkcarlos/HoldOn.js/master/src/download/HoldOn.min.css" rel="stylesheet"/>
    <script src="https://rawgit.com/sdkcarlos/HoldOn.js/master/src/download/HoldOn.min.js" type='text/javascript'></script>
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700,800|Roboto:400,500,700" rel="stylesheet" type='text/css' media='all'>


    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js" type='text/javascript'></script>
    <![endif]-->
	{% if setting('snippet_header') %}
		{{ setting('snippet_header') | raw }}
	{% endif %}

    <!-- Web Application Manifest -->
    <link rel="manifest" href="/manifest.json">
    <!-- Chrome for Android theme color -->
    <meta name="theme-color" content="#000000">

    <!-- Add to homescreen for Chrome on Android -->
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Porttie">
    <link rel="icon" sizes="512x512" href="/images/icons/icon-512x512.png">

    <!-- Add to homescreen for Safari on iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="Porttie">
    <link rel="apple-touch-icon" href="/images/icons/icon-512x512.png">

    <link href="/images/icons/splash-640x1136.png" media="(device-width: 320px) and (device-height: 568px) and (-webkit-device-pixel-ratio: 2)" rel="apple-touch-startup-image" />
    <link href="/images/icons/splash-750x1334.png" media="(device-width: 375px) and (device-height: 667px) and (-webkit-device-pixel-ratio: 2)" rel="apple-touch-startup-image" />
    <link href="/images/icons/splash-1242x2208.png" media="(device-width: 621px) and (device-height: 1104px) and (-webkit-device-pixel-ratio: 3)" rel="apple-touch-startup-image" />
    <link href="/images/icons/splash-1125x2436.png" media="(device-width: 375px) and (device-height: 812px) and (-webkit-device-pixel-ratio: 3)" rel="apple-touch-startup-image" />
    <link href="/images/icons/splash-828x1792.png" media="(device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 2)" rel="apple-touch-startup-image" />
    <link href="/images/icons/splash-1242x2688.png" media="(device-width: 414px) and (device-height: 896px) and (-webkit-device-pixel-ratio: 3)" rel="apple-touch-startup-image" />
    <link href="/images/icons/splash-1536x2048.png" media="(device-width: 768px) and (device-height: 1024px) and (-webkit-device-pixel-ratio: 2)" rel="apple-touch-startup-image" />
    <link href="/images/icons/splash-1668x2224.png" media="(device-width: 834px) and (device-height: 1112px) and (-webkit-device-pixel-ratio: 2)" rel="apple-touch-startup-image" />
    <link href="/images/icons/splash-1668x2388.png" media="(device-width: 834px) and (device-height: 1194px) and (-webkit-device-pixel-ratio: 2)" rel="apple-touch-startup-image" />
    <link href="/images/icons/splash-2048x2732.png" media="(device-width: 1024px) and (device-height: 1366px) and (-webkit-device-pixel-ratio: 2)" rel="apple-touch-startup-image" />

    <!-- Tile for Win8 -->
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/images/icons/icon-512x512.png">

    <script type="text/javascript"> 
        // Initialize the service worker
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('/sw.js', {
                scope: '.' 
            }).then(function (registration) {
                // Registration was successful
                console.log('Porttie: ServiceWorker registration successful with scope: ', registration.scope);
            }, function (err) {
                // registration failed :(
                console.log('Porttie: ServiceWorker registration failed: ', err);
            });
        }
         
    </script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-76986308-2"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
    
      gtag('config', 'UA-76986308-2');
    </script>
 
</head>
<body data-turbolinks="false">

<div id="app">

    {% block navbar %}
        {% include 'layouts.navbar.twig' %}
    {% endblock %}

    {% block search_bar %}{% endblock %}

    <div class="main-content   " id="main" >
         
        {% block content %}{% endblock %}
    </div>

</div>


{% block footer %}
    {% include 'layouts.footer.twig' %}
{% endblock %}

{% block modals %}
    {% include 'layouts.modals.twig' %}
{% endblock %}

{% block scripts %}{% endblock %}

{% include 'layouts.analytics.twig' %}

{% if auth_check() and auth_user().requires_payment_information and not is_active('account.bank-account.index') %}
<div style="width: 100%;" class="p-2 bg-danger fixed-bottom">
	<div class="container">
		<div class="d-flex justify-content-center align-items-center">

		<span class="text-white mb-0 mr-5">{{ __('Important: Please enter your payment information so buyers can order your listings') }}</span>
		<a href="{{ route('account.bank-account.index') }}" class="btn btn-outline-light pull-right mr-2">Continue</a>
		</div>
	</div>
</div>
{% endif %}

{% if setting('cookie_consent_enabled') %}
    <script>
        window.cookieconsent.initialise({
            container: document.getElementById("consent"),
            palette:{
                popup: {background: "#237afc"},
                button: {background: "transparent", border:"#fff", text:"#fff"}
            },
            cookieconsent: {
                hasTransition: false
            },
            content: {
                header: '{{ __("Cookies used on the website!") }}',
                message: '{{ __("This website uses cookies to ensure you get the best experience on our website.") }}',
                dismiss: '{{ __("Got it!") }}',
                allow: '{{ __("Allow cookies") }}',
                deny: '{{ __("Decline") }}',
                link: null,
                href: null,
                close: '&#x274c;'
            },
            autoOpen:true,
            revokable:false,
            onStatusChange: function(status) {
                console.log(this.hasConsented() ? 'enable cookies' : 'disable cookies');
            },
            law: {
                regionalLaw: false,
            },
            location: false
        });
    </script>
{% endif %}


</body>
</html>